extends layout

block content
    .row
        .col-xs-12
                form(action="/api/users/581f63dd9d4e1925baf397d4/notes", method="post", role="form")
                    .form-group
                        label(for='title') Title
                        input#title(name="title").form-control
                    .form-group
                        label(for='contents') Contents
                        input#contents(name="contents").form-control
                    button.btn.btn-default(type='submit') Add Note

                 .error= message
     .row
         .col-xs-12
            .list-group
                each Note in notes
                    .list-group-item.notetitle="Note Title: " + Note.title
                            form(action="/api/users/581f63dd9d4e1925baf397d4/notes/#{Note.title}?_method=delete", method="post", role="form")
                                button.btn.btn-danger(type='submit') Delete Note
                    .list-group-item.notecontent="Note Contents: " + Note.contents





